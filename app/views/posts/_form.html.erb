<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  Select Category:
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p><%= b.label %>
    <%= b.check_box %></p>
  <% end %>
  <br>
  Or, Create New
  <%= f.fields_for :categories do |category_builder| %>
    
    <%= category_builder.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
