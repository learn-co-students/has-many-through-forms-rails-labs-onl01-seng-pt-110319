<h1>New Post</h1>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %>
    <%= f.text_field :content %><br><br>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

    <%= f.fields_for :categories, post.categories.build do |category_fields| %>
        <%= category_fields.label :name, "Cateogory" %>
        <%= category_fields.text_area :name %>
    <% end %><br><br>

    <%= f.submit %>
<% end %>